{
  "name": "offline-wallet",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run type-check && vite build",
    "build:prod": "pnpm run lint:fix && npm run type-check && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "fetch-icons": "python3 scripts/fetch_chain_icons.py",
    "ios": "tauri ios init",
    "android": "tauri android init",
    "build:ios": "tauri ios build --open",
    "build:android": "tauri android build --open",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-barcode-scanner": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@vicons/ionicons5": "^0.13.0",
    "jsqr": "^1.4.0",
    "naive-ui": "^2.43.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.13",
    "vue-i18n": "^11.2.2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@tauri-apps/plugin-biometric": "^2.3.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@testing-library/vue": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "@vue/test-utils": "^2.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.23.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.0",
    "vue-tsc": "^2.1.10"
  }
}
